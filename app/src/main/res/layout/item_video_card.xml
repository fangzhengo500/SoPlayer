<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/rusty_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/video_card_default_drawable"
            tools:src="@color/rusty_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_normal"
                tools:text="display name display name display name display name display name display name display name display name display name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/item_video_card_margin_top"
                android:background="#3000" />

            <TextView
                android:id="@+id/tv_duration"
                style="@style/VideoSimpleInfoTextStyle"
                android:layout_marginTop="@dimen/item_video_card_margin_top"
                tools:text="03:07" />

            <TextView
                android:id="@+id/tv_size"
                style="@style/VideoSimpleInfoTextStyle"
                android:layout_marginTop="@dimen/item_video_card_margin_top"
                tools:text="50MB" />

            <TextView
                android:id="@+id/tv_display_size"
                style="@style/VideoSimpleInfoTextStyle"
                android:layout_marginTop="@dimen/item_video_card_margin_top"
                tools:text="640X480" />

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_video_card_margin_top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:progress="100" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>